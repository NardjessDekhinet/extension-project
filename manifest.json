{
  "manifest_version": 3,
  "name": "URL Safety Scanner",
  "version": "1.0",
  "description": "Scans URLs for safety using VirusTotal API.",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "https://www.virustotal.com/*",
    "https://safebrowsing.googleapis.com/*",
    "https://api.ipqualityscore.com/*",
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
